rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Функції-помічники
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Правила для колекції users
    match /users/{userId} {
      // Читати можуть всі авторизовані користувачі
      allow read: if isAuthenticated();
      
      // Створювати та оновлювати може тільки власник
      allow create, update: if isOwner(userId);
      
      // Видаляти може тільки власник
      allow delete: if isOwner(userId);
    }
    
    // Правила для колекції polls
    match /polls/{pollId} {
      // Читати можуть всі авторизовані користувачі
      allow read: if isAuthenticated();
      
      // Створювати може будь-який авторизований користувач
      allow create: if isAuthenticated() 
                    && request.resource.data.authorId == request.auth.uid
                    && request.resource.data.question is string
                    && request.resource.data.question.size() >= 10
                    && request.resource.data.options is list
                    && request.resource.data.options.size() >= 2
                    && request.resource.data.options.size() <= 10;
      
      // Оновлювати може тільки автор опитування
      allow update: if isAuthenticated() 
                    && resource.data.authorId == request.auth.uid;
      
      // Видаляти може тільки автор опитування
      allow delete: if isAuthenticated() 
                    && resource.data.authorId == request.auth.uid;
      
      // Правила для підколекції votes
      match /votes/{voteId} {
        // Читати голоси може будь-який авторизований користувач
        // (якщо опитування не анонімне)
        allow read: if isAuthenticated();
        
        // Створювати голос може тільки авторизований користувач
        // voteId має дорівнювати userId, щоб користувач міг голосувати тільки один раз
        allow create: if isAuthenticated() 
                      && voteId == request.auth.uid
                      && request.resource.data.userId == request.auth.uid;
        
        // Оновлювати та видаляти голоси заборонено
        allow update, delete: if false;
      }
    }
  }
}
